#!/bin/bash

cd ~
git clone https://github.com/cojoigo/Capstone.git >/dev/null 2>&1
mkdir ~/Capstone/nosferatu/logs/
touch ~/Capstone/nosferatu/logs/gunicorn_supervisor.log
touch ~/Capstone/nosferatu/logs/redis_server.log
touch ~/Capstone/nosferatu/logs/redis_worker.log

mkproject nosferatu
workon nosferatu
pip install -r ~/Capstone/nosferatu/requirements.txt
